pipeline {
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build Docker Image'){
            steps{
               sh "docker build . -t mitanjali/nextwebapp:${DOCKER_TAG}"
            }
        }
        stage('DockerHub push'){
            steps{
                withCredentials([string(credentialsId: 'docker-hub', variable: 'dockerHubPwd')]) {
                    sh "docker login -u mitanjali -p ${dockerHubPwd}"
                    sh "docker push mitanjali/nextwebapp:${DOCKER_TAG}"
                }
            }
        }
        stage('Deploy to DevServer'){
            steps{
                sshagent (credentialsIds: ['tomcat-dev']) {
                    script{
                        def runCmd = "docker run -d -p 8080:8080 --name=nextwebapp mitanjali/nextwebapp:${DOCKER_TAG}"
                        sh "ssh o StrictHostKeyChecking=no ec2-user@172.31.34.81 ${runCmd}"
                    }
                }
            }
        }
    }
}

def getDockerTag(){
    def tag  = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}
